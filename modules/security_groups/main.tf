// modules/security_groups/main.tf
resource "aws_security_group" "ssh" {
  name        = "allow-ssh"
  description = "Allow SSH"
  vpc_id      = var.vpc_id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.environment}-ssh"
  }
}

resource "aws_security_group" "mariadb" {
  name        = "allow-mariadb"
  description = "Allow MariaDB"
  vpc_id      = var.vpc_id

  ingress {
    from_port       = 3360
    to_port         = 3360
    protocol        = "tcp"
    security_groups = [aws_security_group.ssh.id]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.environment}-mariadb"
  }
}

resource "aws_security_group" "elb" {
  name        = "elb-sg"
  description = "Allow ELB"
  vpc_id      = var.vpc_id

  ingress {
    from_port   = 80
